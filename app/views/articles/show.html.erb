<div class="container">
  <h2 class="text-center m-5"><%= @article.title %></h2>


    <div class="card text-center m-5 shadow mb-5 bg-white rounded">
      <div class="card-header">
        <%if @article.user %>
          Created by <%= link_to @article.user.username, user_path(@article.user)  %>
        <%end%>
      </div>
      <div class="card-body">
        </h5>
        <div class="card-text"><%=simple_format(@article.description)  %></div>
        <% if logged_in? && @article.user == currentUser %>
        <%= link_to 'Edit' , edit_article_path(@article) , class: "btn btn-outline-success"%>
        <%= link_to 'Delete' , article_path(@article) , method: :delete, data: {confirm: "Are you sure"} , class: "btn btn-outline-danger"%>
          <%end %>
        <%= link_to 'Return to Articles' , articles_path,class: "btn btn-outline-primary" %>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
          edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
      </div>
    </div>
</div>