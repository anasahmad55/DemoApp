<div class="container m-5 justify-content-center" id="signUp">
  <%= render 'shared/error', obj: @category %>
  <div class="signup-form">
    <%= form_with(model: @category ,local: true , class:"shadow p-3 mb-3 bg-info rounded") do |f| %>
      <div class="col-xs-8 col-xs-offset-4">
        <h2>Edit Category</h2>
      </div>
      <div class="form-group">
        <%= f.label :name,'Category name', class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.text_field :name, class:"form-control", required:"required", placeholder:"Enter name"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>
