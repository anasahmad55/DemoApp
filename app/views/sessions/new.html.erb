<div class="container m-5 justify-content-center" id="signUp">
  <div class="signup-form">
    <%= form_with(scope: :session, url: login_path ,local: true , class:"shadow p-3 mb-3 bg-info rounded") do |f| %>
      <div class="col-xs-8 col-xs-offset-4">
        <h2>Log in</h2>
      </div>
      <div class="form-group">
        <%= f.label :email, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.email_field :email, class:"form-control", required:"required", placeholder:"Enter email"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.password_field :password, class:"form-control", placeholder:"Enter password"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-success" %>
      </div>
    <% end %>
    <div class="text-center">Don't have an account?<%= link_to "Sign Up", signup_path %></div>
  </div>

</div>
