<div class="container m-5">
  <%= render 'shared/error', obj: @user %>
  <div class="signup-form">
    <%= form_with(model: @user ,local: true , class:"form-horizontal") do |f| %>
      <div class="col-xs-8 col-xs-offset-4">
        <h2>Sign Up</h2>
      </div>
      <div class="form-group">
        <%= f.label :username, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.text_field :username, class:"form-control", required:"required"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.email_field :email, class:"form-control", required:"required"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.password_field :password, class:"form-control", required:"required"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
      </form>
      <div class="text-center">Already have an account? <a href="#">Login here</a></div>
    <% end %>
  </div>

</div>
