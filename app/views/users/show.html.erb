<h1 style="text-align: center"><%=@user.username %></h1>
<div class="text-center mt-4">
  <%if @user==currentUser %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  <%end %>
  <%= link_to "delete Profile", user_path(@user),method: :delete,data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger m-3" %>
</div>
<%= render 'articles/articles' %>
